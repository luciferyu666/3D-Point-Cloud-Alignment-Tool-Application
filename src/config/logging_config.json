{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "detailed": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      },
      "simple": {
        "format": "%(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "detailed",
        "filename": "app.log",
        "maxBytes": 10485760,
        "backupCount": 3,
        "encoding": "utf8"
      }
    },
    "loggers": {
      "app": {
        "level": "DEBUG",
        "handlers": ["console", "file"],
        "propagate": false
      }
    },
    "root": {
      "level": "INFO",
      "handlers": ["console", "file"]
    }
  }
  